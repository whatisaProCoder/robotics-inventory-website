<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Category</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="shortcut icon" href="/favicon.svg" type="image/x-icon">
</head>

<body>
  <%- include("./partials/header", {active:"categories"}) %>
    <div class="content-container">
      <div class="form-container">
        <div class="title">
          Add New Category
        </div>
        <% if (locals.errors) {%>
          <%- include("./partials/errors", {errors:errors}) %>
            <% } %>
              <form action="/categories/new" method="POST" class="category-form">
                <div class="field-container">
                  <input type=" text" name="categoryName" placeholder="Name">
                </div>
                <div class="button-group">
                  <button type="reset" class="reset-button">Reset</button>
                  <button type="submit" class="submit-button">Submit</button>
                </div>
              </form>
              <div class="go-back-button-container">
                <%- include("./partials/buttons/go-back", {link:"/categories"}) %>
              </div>
      </div>
    </div>
</body>

</html>